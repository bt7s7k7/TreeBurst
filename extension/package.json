{
    "name": "tree-burst-language",
    "displayName": "TreeBurst Language",
    "description": "Provides syntax highlighting for TreeBurst files",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tree-burst",
                "aliases": [
                    "TreeBurst",
                    "tb"
                ],
                "extensions": [
                    ".tb"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tree-burst",
                "scopeName": "source.tree-burst",
                "path": "./syntaxes/tb.tmLanguage.json"
            }
        ]
    }
}
